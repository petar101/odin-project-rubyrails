<div class="container mt-4">
  <div class="card">
    <div class="card-body">
      <h1 class="card-title"><%= @post.content %></h1>
      
      <div class="mt-3">
        <small class="text-muted">
          Posted by <%= @post.user.username %> on <%= @post.created_at.strftime("%B %d, %Y at %I:%M %p") %>
        </small>
      </div>

      <div class="mt-4">
        <%= link_to "Back to Posts", root_path, class: "btn btn-secondary" %>
        <% if current_user == @post.user %>
          <%= link_to "Edit", edit_post_path(@post), class: "btn btn-primary" %>
          <%= button_to "Delete", @post, method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure?" } %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<% if current_user&.role == "member" %>
  <p><em>Written by: <%= @post.user.username %></em></p>
<% else %>
  <p><em>Written by: Anonymous</em></p>
<% end %>